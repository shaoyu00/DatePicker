<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.datedialog.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义时间："
            android:textColor="#606060"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#F4F4F4"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/start_time_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="2017"
                android:textColor="#606060"
                android:textSize="14sp" />

            <View
                android:layout_width="5sp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#606060" />

            <TextView
                android:id="@+id/start_time_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="2"
                android:textColor="#606060"
                android:textSize="14sp" />

            <View
                android:layout_width="5sp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#606060" />

            <TextView
                android:id="@+id/start_time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="22"
                android:textColor="#606060"
                android:textSize="14sp" />

        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#606060" />

        <LinearLayout
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#F4F4F4"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/end_time_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="2017"
                android:textColor="#606060"
                android:textSize="14sp" />

            <View
                android:layout_width="5sp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#606060" />

            <TextView
                android:id="@+id/end_time_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="2"
                android:textColor="#606060"
                android:textSize="14sp" />

            <View
                android:layout_width="5sp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#606060" />

            <TextView
                android:id="@+id/end_time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="22"
                android:textColor="#606060"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
